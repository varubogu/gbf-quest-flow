{
  "name": "eminent-ellipse",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host",
    "build": "astro build",
    "deploy": "bun install && bunx --bun astro build && mkdir -p dist/content && cp -r src/content/flows dist/content/flows",
    "preview": "astro preview --host",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "bun run format:check && bun run lint",
    "fix": "bun run format && bun run lint:fix",
    "postbuild": "mkdir -p dist/content && cp -r src/content/flows dist/content/flows",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@astrojs/react": "^4.2.0",
    "@astrojs/tailwind": "^6.0.0",
    "@headlessui/react": "^2.2.0",
    "@radix-ui/react-slot": "^1.1.2",
    "@shadcn/ui": "^0.0.4",
    "@tailwindcss/postcss": "^4.0.6",
    "@tailwindcss/vite": "^4.0.6",
    "astro": "^5.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.3",
    "lucide-react": "^0.475.0",
    "postcss": "^8.5.2",
    "react-i18next": "^15.4.1",
    "react-resizable-panels": "^2.1.7",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@playwright/test": "^1.50.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@vitest/coverage-v8": "3.0.5",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "msw": "^2.7.0",
    "prettier": "^3.5.1",
    "prettier-plugin-astro": "^0.14.1",
    "ts-node": "^10.9.2",
    "vitest": "^3.0.6"
  }
}
