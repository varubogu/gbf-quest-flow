---
// 通常の画面
// 下記のようにURLパラメータでdを指定するとデータを選択して表示可能
// https://ドメイン/?d=sample

import BaseLayout from '@/layouts/BaseLayout.astro';
import BodyLayout from '@/layouts/BodyLayout';

const mode = Astro.url.searchParams.get('mode');

// モードに応じて初期モードを設定
let initialMode: 'view' | 'edit' | 'new' = 'view';
if (mode === 'new') {
  initialMode = 'new';
} else if (mode === 'edit') {
  initialMode = 'edit';
}
---

<BaseLayout>
  <BodyLayout client:load initialMode={initialMode} />
</BaseLayout>
