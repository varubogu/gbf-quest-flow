---
// Reactコンポーネントとして描画
import FlowBaseLayout from "@/layouts/FlowBaseLayout";
import FlowBodyLayout from "@/layouts/FlowBodyLayout";

---

<FlowBaseLayout client:load>
  <FlowBodyLayout client:only="react" />
</FlowBaseLayout>

<script>
  import useFlowStore from "@/stores/flowStore";
  import sampleDataJson from "@/content/flows/sample.json";

  // クライアントサイドでストアに初期データをセット
  useFlowStore.getState().setFlowData(sampleDataJson);
</script>
