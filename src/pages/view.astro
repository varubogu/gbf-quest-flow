---
import FlowLayout from "@/layouts/FlowLayout.astro";
import { ActionTableContainer } from "@/components/organisms/ActionTableContainer";
import sampleDataJson from "@/content/sample_data.json"; // JSONファイルをインポート
import type { Flow } from "@/types/models";

// JSONから必要な部分（ここでは flow 配列）を抽出して利用します
const data: Flow = sampleDataJson;
---

<FlowLayout data={data}>
  <div slot="awareness">
    <div>
      <pre>{data.always}</pre>
    </div>
  </div>

  <ActionTableContainer
    slot="action-table"
    client:load
    data={data.flow}
    buttonPosition="right"
  />
</FlowLayout>